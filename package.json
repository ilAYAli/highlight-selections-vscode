{
  "name": "highlight-selections-vscode",
  "displayName": "Highlight Selections",
  "description": "Enhanced selection(s) highlighting for your text editor.",
  "version": "0.0.1",
  "publisher": "Petter Wahlman",
  "engines": {
    "vscode": "^1.94.0"
  },
    "repository": {
    "type": "git",
    "url": "https://github.com/ilAYAli/highlight-selections-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Highlight Selections",
      "properties": {
        "highlightSelections.borderColor": {
          "type": "string",
          "default": "red",
          "description": "Specifies the border color used & is changeable to any valid CSS color value."
        },
        "highlightSelections.borderWidth": {
          "type": "string",
          "default": "2px",
          "description": "Specifies the width of the border in pixels."
        },
        "highlightSelections.borderStyle": {
          "type": "string",
          "default": "solid",
          "description": "Specifies the border style of the line."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^10.7.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "escape-string-regexp": "^4.0.0",
    "lodash.debounce": "^4.0.8"
  }
}
